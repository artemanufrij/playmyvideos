<component type="desktop">
    <id>com.github.artemanufrij.playmyvideos.desktop</id>
    <metadata_license>CC0-1.0</metadata_license>
    <project_license>GPL-3.0+</project_license>
    <name>Video Player</name>
    <summary>A video player for watching local video files.</summary>
    <description>
        <p>A very fast video player designed extra for large local libraries.</p>
    </description>
    <categories>
        <category>Video</category>
    </categories>
    <custom>
        <value key="x-appcenter-color-primary">#202020</value>
        <value key="x-appcenter-color-primary-text">rgb(255,255,255)</value>
        <value key="x-appcenter-suggested-price">1</value>
    </custom>
    <developer_name>Artem Anufrij</developer_name>
    <url type="homepage">https://github.com/artemanufrij/playmyvideos</url>
    <url type="bugtracker">https://github.com/artemanufrij/playmyvideos/issues</url>
    <url type="help">https://github.com/artemanufrij/playmyvideos/issues</url>
    <update_contact>artem.anufrij@live.de</update_contact>
    <screenshots>
        <screenshot type="default">
            <image>https://raw.githubusercontent.com/artemanufrij/playmyvideos/master/Screenshot.png</image>
        </screenshot>
        <screenshot>
            <image>https://raw.githubusercontent.com/artemanufrij/playmyvideos/master/Screenshot_Player.png</image>
        </screenshot>
    </screenshots>
    <releases>
        <release version="0.2.3" date="2018-01-17">
            <description>
                <p>New:</p>
                <ul>
                    <li>Open multi selected files</li>
                </ul>
                <p>Fix:</p>
                <ul>
                    <li>Empty playlist if open an external video file</li>
                </ul>
                <p>Improved:</p>
                <ul>
                    <li>If path looks like '…\Best Comedy Ever\Season 01\…' player bulds following title 'Best Comedy Ever - Season 01'</li>
                    <li>Lazy cover loading -> less memory on startup</li>
                </ul>
            </description>
        </release>
        <release version="0.2.2" date="2018-01-15">
            <description>
                <p>Translation:</p>
                <ul>
                    <li>Spanish (by Alain)</li>
                </ul>
            </description>
        </release>
        <release version="0.2.1" date="2018-01-07">
            <description>
                <p>Fix:</p>
                <ul>
                    <li>null handler exception if audio stream hasn't a value</li>
                </ul>
            </description>
        </release>
        <release version="0.2.1" date="2018-01-07">
            <description>
                <p>New:</p>
                <ul>
                    <li>Save/restore window position</li>
                </ul>
                <p>Improved:</p>
                <ul>
                    <li>Start searching instand on key press</li>
                </ul>
            </description>
        </release>
        <release version="0.2.0" date="2017-12-27">
            <description>
                <p>New:</p>
                <ul>
                    <li>Preview Popup on Timeline</li>
                </ul>
                <p>Improved:</p>
                <ul>
                    <li>Some popup behaviors</li>
                </ul>
            </description>
        </release>
        <release version="0.1.9" date="2017-12-25">
            <description>
                <p>New:</p>
                <ul>
                    <li>Resume playing last video</li>
                    <li>Open box of last viewed video</li>
                </ul>
                <p>Fix:</p>
                <ul>
                    <li>Critical error on closing window while a video is playing</li>
                </ul>
                <p>Translation:</p>
                <ul>
                    <li>Portuguese (Brazil) (by Cleiton Floss)</li>
                </ul>
            </description>
        </release>
        <release version="0.1.8" date="2017-12-15">
            <description>
                <p>New:</p>
                <ul>
                    <li>Option for saving custom covers into library</li>
                </ul>
            </description>
        </release>
        <release version="0.1.7" date="2017-12-04">
            <description>
                This patch includes small UI improvements.
                <p>Fix:</p>
                <ul>
                    <li>Playing episodes</li>
                </ul>
            </description>
        </release>
        <release version="0.1.6" date="2017-11-30">
            <description>
                <p>New:</p>
                <ul>
                    <li>Improved Sync: don't show video item if video file doesn't exist.</li>
                </ul>
                <p>Fix:</p>
                <ul>
                    <li>[only if no items in library] Open welcome screen instead empty library after finished playing</li>
                    <li>Improved behavior for subtiles in Series/Seasons folder</li>
                </ul>
            </description>
        </release>
        <release version="0.1.5" date="2017-11-27">
            <description>
                <p>New:</p>
                <ul>
                    <li>Repeat mode</li>
                    <li>Option for Light Theme</li>
                </ul>
                <p>Changes:</p>
                <ul>
                    <li>Icon (by Alexey Varfolomeev)</li>
                </ul>
            </description>
        </release>
        <release version="0.1.4" date="2017-11-21">
            <description>
                <p>New:</p>
                <ul>
                    <li>Import files by Drag and Drop</li>
                    <li>Toggle playing by click mouse button</li>
                </ul>
            </description>
        </release>
        <release version="0.1.3" date="2017-11-10">
            <description>
                <p>New:</p>
                <ul>
                    <li>Disable screensaver while playing</li>
                    <li>Improved start up</li>
                </ul>
                <p>Fix:</p>
                <ul>
                    <li>Subtitle button wasn't visible of only one Subtitle was available</li>
                </ul>
                <p>Translation:</p>
                <ul>
                    <li>French (by nvivant)</li>
                </ul>
            </description>
        </release>
        <release version="0.1.1" date="2017-11-7">
            <description>
                <p>New:</p>
                <ul>
                    <li>Toggle playing [SPACE]</li>
                    <li>Toggle fullscreen [F11]</li>
                    <li>Media key support</li>
                    <li>Seek function [LEFT/RIGHT]</li>
                </ul>
            </description>
        </release>
        <release version="0.1.0" date="2017-11-5">
            <description>
                <p>Initial release</p>
            </description>
        </release>
    </releases>
</component>
